<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.HomeActivity">

    <Button
        android:id="@+id/btnHomeShare"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:layout_marginTop="368dp"
        android:backgroundTint="#FF9800"
        android:onClick="onHomeShareClick"
        android:text="Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="299dp"
        android:layout_height="59dp"
        android:layout_marginTop="568dp"
        android:backgroundTint="#FF9800"
        android:onClick="onLogoutClick"
        android:text="Logn out"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNews"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:layout_marginTop="292dp"
        android:backgroundTint="#FF9800"
        android:onClick="onNewsClick"
        android:text="Tin tức"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnXem"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:layout_marginTop="292dp"
        android:backgroundTint="#FF9800"
        android:onClick="onXemClick"
        android:text="Xem các khoá học"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="333dp"
        android:layout_height="42dp"
        android:layout_marginTop="208dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="LMS FPT Polytechnic"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="370dp"
        android:src="@drawable/fpt"
        android:layout_height="162dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:layout_marginTop="368dp"
        android:backgroundTint="#FF9800"
        android:text="Bản Đồ"
        android:onClick="onMapClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>